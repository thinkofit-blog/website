---
import type { CollectionEntry } from "astro:content"
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import FormattedDate from "../components/FormattedDate.astro"
import Speculationrules from "../components/Speculationrules.astro"
import { Comments } from "../components/Comments.tsx"

type Props = CollectionEntry<"articles">["data"]

const { title, short, description, pubDate, updatedDate, heroImage } = Astro.props
---

<html lang="de" class="bg-ctp-base text-ctp-text dark:ctp-mocha">
    <head>
        <BaseHead title={title} description={description} image={heroImage} />
    </head>

    <body>
        <Header title={short} />

        <main>
            <article>
                <div>
                    <div>
                        <FormattedDate date={pubDate} />
                        {
                            updatedDate && (
                                <div>
                                    Last updated on <FormattedDate date={updatedDate} />
                                </div>
                            )
                        }
                    </div>
                    <h1>{title}</h1>
                </div>
                <slot />
            </article>
            <Comments />
        </main>

        <Footer />
        <Speculationrules />
    </body>
</html>
