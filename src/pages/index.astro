---
import Link from "../components/Link.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Default from "../layouts/Default.astro";

import { getCollection } from "astro:content";
import FormattedDate from "../components/FormattedDate.astro";
import { SupabaseLogin } from "../components/SupabaseLogin";

const posts = (await getCollection("articles")).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<Default
    title={SITE_TITLE}
    short={SITE_TITLE}
    description={SITE_DESCRIPTION}
    noHeader
>
    <h1>{SITE_TITLE}</h1>
    <p>{SITE_DESCRIPTION}</p>
    <h2>Autoren</h2>
    <ul>
        <li>
            <Link href="/authors/frank-mayer/">Frank Mayer</Link>
        </li>
        <li>
            <Link href="/authors/vanessa-vieth/">Vanessa Vieth</Link>
        </li>
    </ul>
    <h2>Artikel</h2>
    <section>
        <ul>
            {
                posts.map((post) => (
                    <li>
                        <a
                            href={`/articles/${post.slug}/`}
                            class="hover:text-ctp-mauve"
                        >
                            <img
                                class="pointer-events-none rounded-lg"
                                width={720}
                                height={360}
                                src={post.data.heroImage.replace(
                                    /\.[a-z]+$/,
                                    ".avif",
                                )}
                                alt=""
                            />
                            <b>{post.data.title}</b>
                            <p>
                                <FormattedDate date={post.data.pubDate} />
                            </p>
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
    <SupabaseLogin client:only="solid-js" />
</Default>
